
<body class="bodyadditem">
    <div class="container mt-4 col-md-6" style="padding-left: 60px;">
        <div class="d-flex row align-items-center">
        <h2 class="text-center text-secondary col-7"><strong>Add New Hotel </strong></h2>
        <a href="/admin/edithotel" type="submit" class="col-5 btn btn-secondary" style="width: 150px; height: 40px;">Edit Hotel</a>
        </div>
        <form action="/admin/hoteldetails" method="post" enctype="multipart/form-data" id="productForm" class="pt-3">
            <div class="mb-3 col-10">
                <label class="form-label">Hotel Name</label>
                <input type="text" class="form-control" name="hotelname" id="productName" required>
            </div>
            <div class="mb-3  col-10">
                <label class="form-label">Description</label>
                <textarea class="form-control" name="description" id="productDescription" rows="3" required></textarea>
            </div>
            <div class="mb-3  col-10">
                <label class="form-label">Veg or Non-veg</label>
                <select name="vegornon" required>
                    <option value="veg">vegeterian</option>
                    <option value="non-veg">non vegeterian</option>
                </select>
            </div>
            <div class="mb-3  col-10">
                <label class="form-label">category</label>
                <select name="category">
                    <option ></option>
                    <option value="resturant">Resturant</option>
                    <option value="cafe">Cafe</option>
                    <option value="bakes">Bakes</option>
                    <option value="veg-hotel">Veg hotel</option>
                    <option value="bakery">Bakery</option>
                    <option value="pizza">Pizza</option>
                </select>
            </div>
            <div class="mb-3  col-10">
                <label for="productImage" class="form-label">Upload Image</label>
                <input type="file" name="image" class="form-control" id="productImage" required>
                <img id="imagePreview" class="mt-3" src="#" alt="Image Preview" style="display:none; width: 100px; height: 100px; object-fit: cover;">
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  

    <script>
        document.getElementById("productImage").addEventListener("change", function(event) {
    const file = event.target.files[0];
    if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            const imagePreview = document.getElementById("imagePreview");
            imagePreview.src = e.target.result;
            imagePreview.style.display = "block";
        };
        reader.readAsDataURL(file);
    }
});
    </script>