
<section>
    <div class="container" style="justify-items: center; background: linear-gradient(135deg, rgba(161, 170, 171, 0.63) 0%, rgba(177, 177, 176, 0.6) 100%);">
<div id="divtable" style="border-radius: 10px;"> 
  <div class="col-12">
<br><table class="table" style="border: 10px ; background-color: rgba(238, 238, 238, 0.725);" id="viewproduct">
  <thead>
    <tr>
      <th style="text-align: center;" class="col-3">Hotel Name</th>
      <th style="text-align: center;" class="col-4">Category</th>
      <th class="col-3">Image</th>
      <th class="col-4">Edit & Delete</th>
    </tr>
  </thead>

  <tbody>
    {{#each product}}
    <tr>
      <td style="text-align: center; padding-top: 40px;">{{this.hotelname}}</td>
      <td style="text-align: center; padding-top: 40px;">{{this.category}}</td>
      <td><img style="width: 110px; height: 100px;" src="/images/hotelpicture/{{this._id}}.jpg" ></td>
      <td><a href="/admin/edithoteldetailpage/{{this._id}}" class="btn btn-primary mt-4">edit</a>
          <a href="/admin/deletehoteldetail/{{this._id}}" class="btn btn-danger mt-4" onclick="return confirm('are you sure delete {{this.hotelname}}')">delete</a>
          </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</div>
</div>
</section>

