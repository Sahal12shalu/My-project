<div id="firstpage">
<div class="login-wrap" >
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
		<div class="login-form">
			<div class="sign-in-htm">
				<form action="/admin/adminlogin1" method="post">
				<div class="group">
					<label for="user" class="label">Username or Email</label>
					<input name="username" id="user" type="text" class="input" required>
				</div>
				<div class="group">
					<label for="pass" class="label">Password</label>
					<input name="password" id="pass" type="password" class="input" data-type="password" minlength="3" required>
				</div>
				<div class="group">
					<input id="check" type="checkbox" class="check" checked>
					<label for="check"><span class="icon"></span> Keep me Signed in</label>
				</div>
				<div class="group">
					<input id="loginbutton" type="submit" class="button" value="Sign In">
				</div>
				{{#if heyy}}
				<script>
                 alert("incorrect email or username");
                 </script>
				{{/if}}
				</form>
			</div>
		</div>
	</div>
</div>
</div>


